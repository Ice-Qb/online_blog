<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<h3>Tag Cloud</h3>
<div id="tag_cloud">
  <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<%= form_tag posts_path, :method => 'get', :id => "posts_search" do %>
  <p>
    <%= select_tag 'category_id', options_for_select(Category.all.map { |el| [el.name, el.id]}), class: 'form-control' %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<%= button_to "Clear", posts_path, :class => "button", :method => :get %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.category.name %></td>
        <td><%= raw post.tags.map { |t| link_to t.name, tag_path(t.name) }.join(', ') %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<%= will_paginate @posts %>

<br>

<%= link_to 'New Post', new_post_path %>
