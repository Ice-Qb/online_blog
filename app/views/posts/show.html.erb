<h3 class="title center"><%= @post.title %></h3>

<p class="post-body">
  <%= @post.body %>
</p>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn-large waves-effect waves-light red' %>
<% end %>
<%= link_to 'Back', posts_path, class: 'btn-large waves-effect waves-light blue' %>
<%= render 'disqus' %>
